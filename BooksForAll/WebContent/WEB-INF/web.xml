<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>BooksForAll</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>addLikeServlet</servlet-name>
    <servlet-class>servlets.addLikeServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addLikeServlet</servlet-name>
    <url-pattern>/addLikeServlet</url-pattern>
  </servlet-mapping>
  
  
  
  
  
  <context-param>
    <param-name>DB_DATASOURCE</param-name>
    <param-value>java:comp/env/jdbc/ExampleDatasource</param-value>
  </context-param>
  <context-param>
    <param-name>DB_NAME</param-name>
    <param-value>ExampleDB</param-value>
  </context-param>
  <resource-ref>
    <description>Example Database Open</description>
    <res-ref-name>jdbc/ExampleDatasourceOpen</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>Example Database Shutdown</description>
    <res-ref-name>jdbc/ExampleDatasourceShutdown</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <listener>
    <listener-class>classes.ManageUserDBFromJsonFile</listener-class>
  </listener>
</web-app>